<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="reset-password">
      <div class="form-name">
        <h2>Reset Password</h2>
      </div>
      <form
        class="form-body"
        method="POST"
        action="/recovery/reset-password/<%= token %>"
        onsubmit="return(validate(event))"
      >
        <% if(message) { %>
        <div class="incorrect">
          <div class="message"><%= message %></div>
          <div class="symbol">
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
        </div>
        <% } %>
        <div class="password">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required />
        </div>
        <div class="re-password">
          <label for="rePassword">Confirm Password</label>
          <input type="password" name="rePassword" id="rePassword" required />
        </div>
        <div class="submit">
          <button type="submit">Reset</button>
        </div>
      </form>
      <div class="login">
        <a href="/login">Back to Log in</a>
      </div>
    </div>
  </body>
  <script src="/js/validator.min.js"></script>
  <script src="/js/validationLogin.js"></script>
  <script>
    let svg = document.querySelector(".reset-password svg");
    let incorrectBadge = document.querySelector(".reset-password .incorrect");

    if (svg && incorrectBadge) {
      svg.addEventListener("click", () => {
        incorrectBadge.remove();
      });
      password.addEventListener("change", () => {
        incorrectBadge.remove();
      });
    }
  </script>
</html>
