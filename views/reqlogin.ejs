<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <body>
    <div class="login">
      <div class="form-name">
        <h2>iCrowdTask Login</h2>
      </div>
      <form
        class="form-body"
        method="POST"
        action="/login"
        onsubmit="return(validate(event))"
      >
        <% if(message) { %>
        <div class="incorrect">
          <% if(message === "no_user") { %>
          <div class="message">
            Email Not Found
          </div>
          <% } else if(message === "incorrect") { %>
          <div class="message">
            Incorrect Password
          </div>
          <% } %>
          <div class="symbol">
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path
                fill-rule="evenodd"
                d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
        </div>
        <% } %>
        <div class="email">
          <label for="email">Email</label>
          <input type="email" name="email" id="email" required />
        </div>
        <div class="password">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" required />
        </div>
        <div class="password-config">
          <div class="save">
            <input type="checkbox" name="save" id="save" />
            <label for="save">Save password</label>
          </div>
          <div class="forgot">
            <a href="/login">Forgot?</a>
          </div>
        </div>
        <div class="submit">
          <button type="submit">Login</button>
        </div>
      </form>
      <div class="sign-up-account">
        <a href="/signup">Create a new account</a>
      </div>
    </div>
  </body>
  <script src="/js/validator.min.js"></script>
  <script src="/js/validationLogin.js"></script>
  <script>
    let svg = document.querySelector(".login svg");
    let incorrectBadge = document.querySelector(".login .incorrect");

    svg.addEventListener("click", () => {
      incorrectBadge.remove();
    });
    email.addEventListener("change", () => {
      incorrectBadge.remove();
    });
    password.addEventListener("change", () => {
      incorrectBadge.remove();
    });
  </script>
</html>
